{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": [
      "dom",
      "es2020"
    ],
    "jsx": "preserve",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "types": [
      "node",
      "react",
      "react-dom",
      "@types/jest"
    ],
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "app/*"
      ],
      "@components/*": [
        "app/_components/*"
      ],
      "@store/*": [
        "app/store/*"
      ],
      "@api/*": [
        "app/api/*"
      ],
      "@utils/*": [
        "app/utils/*"
      ]
    },
    "moduleResolution": "node"
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.test.ts",
    "**/*.test.tsx",
    ".next/types/**/*.ts",
    "jest.config.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
