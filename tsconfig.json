{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["dom", "es2020"],
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,


    "allowJs": true,

    
    "noEmit": true,
    
    
    "resolveJsonModule": true,
    "isolatedModules": true,
    
    "incremental": true,
    "types": ["node", "react", "react-dom", "@types/jest"],
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": "./",
    "paths": {
      "@/*": ["app/*"],
      "@components/*": ["app/_components/*"],
      "@store/*": ["app/_store/*"],
      "@api/*": ["app/_api/*"],
      "@utils/*": ["app/_utils/*"],
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.test.ts",
    "**/*.test.tsx",
    ".next/types/**/*.ts",
    "jest.config.ts"
  ],
  "exclude": ["node_modules"]
}
